<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/headers.ejs") %>
    <title>Document</title>
    <style>
      body {
        width: 100%;
        height: 100vh;
        background-image: url("/for designing/newbg.webp");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
      }
      .navbar{
        background-color: #7ED4D9;
      }
      .centre {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
      }
      .flex {
        display: flex;
      }
      .mr {
        margin: 5px;
      }
      .brdr {
        border-left: 2px solid black;
      }
      .a1 {
        padding-top: 50px;
      }
      .aaa {
        background: linear-gradient(
          135deg,
          rgba(255, 255, 255, 0.1),
          rgba(255, 255, 255, 0)
        );
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 2px solid rgba(0, 0, 0.18);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border-radius: 10px;
        z-index: 2;
      }
      .r {
        border-radius: 50%;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container mt-4 a1">
      <div class="row centre">
        <div class="col-md-5 mb-3">
          <img
            src="<%= user.profile %>"
            alt="img del. by server....."
            class="rounded-circle btn-outline-success"
            width="200px"
            height="250px"
          />
        </div>
        <div class="col-md-5 aaa">
          <p class="fs-5">Name: <%= user.name %></p>
          <p class="fs-5">Email: <%= user.email %></p>

          <p class="fs-5">Total blogs: <%= blogs.length %></p>
        </div>
      </div>
    </div>
    <% if (locals.blogs) { %>

    <div class="container">
      <div class="row mt-4 aaa">
        <div class="col-12 fs-3 centre">POSTS</div>
        <% blogs.forEach((blog) => { %>

        <div class="col-md-4 mt-3 mb-3">
          <div class="card" style="width: 18rem">
            <% if (blog.cover_img_url!=="nope") { %>

            <img src="<%= blog.cover_img_url %>" class="card-img-top" alt="img del. by server" />
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/view/<%= blog._id %>" class="btn btn-primary"
                >View blog</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <% } %>
    <br />
    <%-include("./partials/scripts.ejs") %>
  </body>
</html>
