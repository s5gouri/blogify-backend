<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/headers.ejs") %>
    <title>SIGNUP</title>
    <style>
      body {
        width: 100%;
        height: 100vh;
        background-image: url("../for designing/back.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
      }

      .txt {
        color: white;
      }
      .centre {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .aaa {
        background: linear-gradient(
          135deg,
          rgba(255, 255, 255, 0.1),
          rgba(255, 255, 255, 0)
        );
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 2px solid rgba(0, 0, 0.18);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border-radius: 10px;
        z-index: 2;
      }
      .navbar {
        background-color: #7ed4d9;
      }
      .a1 {
        padding-top: 50px;
      }
      .td {
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar2.ejs") %>

    <div class="container a1">
      <div class="row centre mt-4">
        <div class="col-md-5 centre">
          <div class="fs-1 mb-3 txt">Signup to Blogify</div>
        </div>

        <div class="col-md-6 aaa">
          <form
            action="/user/signup"
            method="post"
            class="mt-3 mb-3"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label txt"
                >Full name:</label
              >
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                name="NAME"
                required
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label txt"
                >Email address</label
              >
              <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                name="EMAIL"
                required
              />
              <div id="emailHelp" class="form-text txt">
                We'll never share your email with anyone else.
              </div>
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label txt"
                >Profile</label
              >
              <input
                type="file"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="name@example.com"
                name="PROFILEIMG"
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label txt"
                >Password</label
              >
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="PASSWORD"
                required
              />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <% if (locals.error) { %>
            <div class="alert alert-primary mt-4" role="alert">
              <%= error %>
            </div>
            <% } %>
          </form>
          <div class="text-center">
            <hr class="a3 mb-3 white txt" />
            <h2 class="text-center fs-5 white txt">Alredy have an account ?</h2>
            <a href="/user/signin">
              <button
                type="button"
                class="fs-4 btn btn-link link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover ch"
              >
                sign-in
              </button>
            </a>
          </div>
        </div>
      </div>
    </div>
    <%-include("./partials/scripts.ejs") %>
  </body>
</html>
