<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/headers.ejs") %>
    <style>
      body {
        width: 100%;
        height: 100vh;
        background-image: url("/for designing/bg2.webp");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
      }
      .navbar {
        background-color: #7ed4d9;
      }
      .centre {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
      }
      .aaa {
        background: linear-gradient(
          135deg,
          rgba(255, 255, 255, 0.1),
          rgba(255, 255, 255, 0)
        );
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 2px solid rgba(0, 0, 0.18);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border-radius: 10px;
        z-index: 2;
      }
    </style>
    <title>BLOG</title>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container centre">
      <div class="fs-1 txt">Add a Blog</div>
    </div>
    <div class="container">
      <div class="row centre">
        <div class="col-md-6 aaa mt-4 text-start">
          <form action="/blog/add" method="post" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Title:</label
              >
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                name="TITLE"
                required
              />
              <label for="exampleFormControlInput1" class="form-label"
                >Cover page:</label
              >
              <input
                type="file"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="name@example.com"
                name="COVERPAGE"
              />
            </div>
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label"
                >Your blog here!!</label
              >
              <textarea
                class="form-control"
                id="exampleFormControlTextarea1"
                rows="3"
                name="BODY"
                required
              ></textarea>
              <button type="submit" class="btn btn-outline-success mt-3">
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include("./partials/scripts.ejs") %>
  </body>
</html>
